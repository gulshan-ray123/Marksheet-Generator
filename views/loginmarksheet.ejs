    }
    #container{
        height: 67vmax;
        background-color: #58a3cb;
        width: 32vmax;
        border-radius: 30px;
        margin-top: 10vh;
        filter: drop-shadow(3px 5px 10px teal);
    }
    /* @media only screen and (max-width:1000px){
        #container{
            height: 100vmax;
