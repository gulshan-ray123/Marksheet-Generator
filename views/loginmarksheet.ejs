      <div id="main">
        <div id="container">
            <div id="header">
                <h2>Student Registration </h2>
            </div>
            <form action="/stu/registration" id="form" method="post" enctype="multipart/form-data" >
                <div class="form-control" >
                    <label for="Enrollement">Enrollement No.:</label> <br>
                    <input type="number" id="enroll" name="enrollement">
                    <i class="fa-solid fa-circle-check"></i>
                    <i class="fa-solid fa-circle-xmark"></i>
                    <small>Error Message</small>
                </div>
                <div class="form-control" >
                    <label for="Student_name">Student's Name:</label> <br>
                    <input type="text" id="fname" name="stu_name">
                    <i class="fa-solid fa-circle-check"></i>
                    <i class="fa-solid fa-circle-xmark"></i>
                    <small>Error Message</small>
                </div>
                <div class="form-control">
                    <label for="Father_name">Father's Name:</label><br>
                    <input type="text"  id="fname" name="fth_name">
                    <i class="fa-solid fa-circle-check"></i>
                    <i class="fa-solid fa-circle-xmark"></i>
                    <small>Error Message</small>
                </div>
                <div class="form-control">
                    <label for="Mother_name">Mother's Name:</label><br>
                    <input type="text"  id="mother"  name="mth_name">
                    <i class="fa-solid fa-circle-check"></i>
                    <i class="fa-solid fa-circle-xmark"></i>
                    <small>Error Message</small>
                </div>
                <div class="form-control">
                    <label for="dob">Date of Birth</label><br>
                    <input type="date"  id="dob" name="dob">
                    <i class="fa-solid fa-circle-check"></i>
                    <i class="fa-solid fa-circle-xmark"></i>
                    <small>Error Message</small>
                </div>
                <div class="form-control">
                    <label for="Address">Address</label><br>
                    <input type="text"  id="add" name="add" >
                    <i class="fa-solid fa-circle-check"></i>
                    <i class="fa-solid fa-circle-xmark"></i>
                    <small>Error Message</small>
                </div>
                <div class="form-control">
                    <label for="Class">Class</label><br>
                    <input type="text"  id="class" name="class_name" placeholder="IN ROMAN NUMBER">
                    <i class="fa-solid fa-circle-check"></i>
                    <i class="fa-solid fa-circle-xmark"></i>
                    <small>Error Message</small>
                </div>  
                <div class="form-control">
                    <label for="Roll_no">Roll No.</label><br>
                    <input type="number" id="class" name="roll">
                    <i class="fa-solid fa-circle-check"></i>
                    <i class="fa-solid fa-circle-xmark"></i>
                    <small>Error Message</small>
                </div> 
                <div class="form-control">
                    <label for="House_name">House Name</label><br>
                    <input type="text"  id="house_nm" name="hos_name">
                    <i class="fa-solid fa-circle-check"></i>
                    <i class="fa-solid fa-circle-xmark"></i>
                    <small>Error Message</small>
                </div>  
                <div class="form-control">
                    <label for="photo">Upload Student Image</label><br>
                    <input type="file" id="photo_stu" name="school_logo">
                    <i class="fa-solid fa-circle-check"></i>
                    <i class="fa-solid fa-circle-xmark"></i>
                    <small>Error Message</small>
                </div>  
                    <input type="submit" value="Submit" class="btn" name="" onclick="validate()" style="cursor: pointer;">
                </form>
        </div>
    </div>
</body>
</html>