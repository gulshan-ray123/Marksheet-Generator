        } 
    } */
    #mob{
        display: none;
    }
    /* #lap{
        display: block;
    } */
     #menu_btn{
        display: none;
    }
    @media (max-width: 480px){
        #mob{
            display: block;
            height: 14rem;
            position: absolute;
            width: 100vw;
        }
        #lap{
            display: none;
        }
        li{
            margin-top: 5px;
        }
        #container{
        height: 125vmax;
        background-color: #58a3cb;
        width: 50vmax;
        border-radius: 30px;
        filter: drop-shadow(3px 5px 10px teal);
        margin-top: 250px;
    }
    /* input{
        height: 10px;
    } */
    #menu{
        display: block;
        background-color: #33a1ff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 25px;
        font-size: 16px;
        cursor: pointer;
    }
    #menu_btn{
        display: block;
    }
    }
    #header{
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(to right,#007991,#78ffd6);
        height: 2px;
        border-top-left-radius: 30px;
        border-top-right-radius: 30px;
        padding: 20px 0;
    }
    #header h2{
        color: #222;
        font-size: 24px;
        text-transform: uppercase;
        text-align: center;  
    }
    #form{
        padding: 40px;
    }
    .form-control{
        margin-bottom: 10px;
        position: relative;
    }
    .form-control label{
        display: inline-block;
        margin-bottom: 5px;
    }
    .form-control input{
        width: 100%;
        border: 2px solid #f0f0f0;
        border-radius: 5px;
        display: block;
        font-size: 14px;
        padding: 12px;
    }
    .form-control input:focus{
        outline: 0;
        border-color: #1b2fc9;
    }
    .form-control.success input{
        border-color: #2ecc71;
    }
    .form-control.error input{
        border-color: #e74c3c;
    }
    .form-control i{
        position: absolute;
        right: 5%;
        top: 38px;
        visibility: hidden;
    }
    .form-control.error small{
        visibility: visible;
    
    }
    .form-control small{
        color: #e74c3c;
        position: absolute;
       
        visibility:hidden;
    }
    .form-control.success i.fa-circle-check{
        color: #2ecc71;
        visibility: visible;
    }
    .form-control.error i.fa-circle-xmark{
        color: #e74c3c;
        visibility: visible;
    }
    
    .btn{
        background: linear-gradient(to right,#007991,#78ffd6);
        border-radius: 10px;
        border: none;
        outline: none;
        color: #fff;
        display: block;
        font-size: 16px;
        padding: 15px 0;
        width:90%;
        font-weight: bold;
        text-transform: uppercase;
        transition: all 1s ease;
        position: absolute;
        right: 20px;
    }
    .btn:hover{
        background: linear-gradient(to left,#007991,#78ffd6);
    }
    
    .form-control2{
        margin: 20px;
        position: relative; 
    }
    *{
        margin: 0px 0px 0px 0px;
    }
    #menu {
        background-color: #33a1ff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 25px;
        font-size: 16px;
        margin: 10px auto;
        cursor: pointer;
            }
    </style>

<body>
      <div style="background-color:skyblue;; height: 60px;" id="menu_btn">
    <button id="menu" onclick="show()">Menu</button>
</div>
<header style="background-color: skyblue;" id="lap">
