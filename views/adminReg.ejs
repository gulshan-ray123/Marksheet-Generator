<script>
    document.getElementById("register").style.display='none';
    function Signin(){
        document.getElementById('register').style.display='inline';
        document.getElementById('login').style.display='none';
    }
    function Login(){
        document.getElementById('register').style.display='none';
        document.getElementById('login').style.display='inline';
    }
    let btn= document.querySelector('#menu');
    let lrn=document.querySelector('#hd1_mob');
    lrn.style.display='none';
    let display=0;
    function show(){
    if(display==0){
        lrn.style.display='block';
        display=1;
        document.querySelector('#menu').innerHTML="X";
    }
    else{
        lrn.style.display='none';
        display=0;
        document.querySelector('#menu').innerHTML='Menu';
    }  
    }
     // Function for validation:
     function validateForm(form) {
    let isValid = true;

    form.querySelectorAll(".input").forEach(input => {
        let value = input.value.trim();
        let name = input.name;

        // Email validation
        if (name === "email" && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value)) {
            alert("Please enter a valid email address.");
            isValid = false;
        }

        // Password length validation
        if ((name === "pass" || name === "con_pass") && value.length < 6) {
            alert("Password must be at least 6 characters long.");
            isValid = false;
        }

        // Confirm password check (only in registration)
        if (name === "con_pass") {
            let password = form.querySelector("input[name='pass']").value.trim();
            if (value !== password) {
                alert("Passwords do not match.");
                isValid = false;
            }
        }

        // Security Key validation (only in login)
        if (name === "sec_key" && value === "") {
            alert("Please enter the security key.");
            isValid = false;
        }

        // Username validation (only in registration)
        if (name === "user_name" && value === "") {
            alert("Please enter a username.");
            isValid = false;
        }
    })
};
  // Function for Login validation:
  function validateLoginForm(form) {
    let isValid = true;

    form.querySelectorAll(".input").forEach(input => {
        let value = input.value.trim();
        let name = input.name;

        // Email validation
        if (name === "email" && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value)) {
            alert("Please enter a valid email address.");
            isValid = false;
        }

        // Password length validation
        if ((name === "pass" || name === "con_pass") && value.length < 6) {
            alert("Password must be at least 6 characters long.");
            isValid = false;
        }

        // Security Key validation (only in login)
        if (name === "sec_key" && value === "") {
            alert("Please enter the security key.");
            isValid = false;
        }

    })};
