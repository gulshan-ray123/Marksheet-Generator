            font-weight: 500;
            padding: 5px 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        #navbar a:hover, #navbar2 a:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .sign {
            background: #33a1ff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 25px;
            font-size: 16px;
        }

